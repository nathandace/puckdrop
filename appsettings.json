{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=nhl.db"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning",
      "PuckDrop": "Debug"
    }
  },
  "AllowedHosts": "*",
  "NhlApi": {
    "BaseUrl": "https://api-web.nhle.com",
    "CacheDuration": {
      "StaticDataMinutes": 360,
      "LiveDataSeconds": 15
    },
    "Polling": {
      "ActiveIntervalSeconds": 3,
      "IdleIntervalSeconds": 30,
      "LiveGameCheckIntervalSeconds": 60,
      "UpcomingGameCheckIntervalSeconds": 300
    }
  },
  "Webhooks": {
    "MaxRetries": 3,
    "TimeoutSeconds": 10,
    "RetryDelaySeconds": 2,
    "PreGameReminderMinutes": 30
  }
}
